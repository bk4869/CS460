
@{
    ViewBag.Title = "Converter";
}

<h2>Convert Miles to Metric</h2>
<div class="row">
    <!--Form catch action and direct the user input and receive from back-end-->
    <form method="get" action="~/Home/Converter" id="inputForm">

        <!--Where user input the mile-->
        <div class="col-lg-6">
            <div class="form-group">
                <label for="milesInput">Miles:</label>
                <input type="number" step="any" class="form-control" name ="miles" id="milesInput" placeholder="Input Miles" required/>
            </div>
        </div>
        <!--Where to select the metric-->
        <div class="col-lg-6">
            <div class="form-group">
                <label>Select a unit:</label>
                <div class="custom-control custom-radio">
                    <input type="radio" id="mm" value="millimeters" name="metricUnit" class="custom-control-input" checked="checked">
                    <label class="custom-control-label" for="customRadio1">millimeters</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="cm" value="centimeters" name="metricUnit" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio1">centimeters</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="m" value="meters" name="metricUnit" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio1">meters</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="km" value="kilometers" name="metricUnit" class="custom-control-input">
                    <label class="custom-control-label" for="customRadio1">kilometers</label>
                </div>
            </div>
        </div>
        <!--Button for submit-->
        <div class="text-center">
            <input type="submit" value="Submit" class="btn btn-primary" id="submitBtn" />
        </div>

        <!--Receive back-end and display the result-->
        <div class="col-lg-12 mt-3">
            <h4 style="color:#ff0000">@ViewData["result"]</h4>
        </div>

    </form>
    

</div>

