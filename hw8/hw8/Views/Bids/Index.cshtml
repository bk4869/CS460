@model IEnumerable<hw8.Models.Bid>

@{
    ViewBag.Title = "Biding List";
}

<h2>Biding List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Buyer1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Buyer1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item1.Name)
        </td>
        <td>
            @String.Format("{0:c}", item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timestamp)
        </td>

    </tr>
}

</table>
